<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CommonHeaderTextView">
        <item name="android:textSize">@dimen/HeaderTextSize</item>
        <item name="android:paddingStart">@dimen/DefaultPaddingStart</item>
        <item name="android:paddingEnd">@dimen/DefaultPaddingEnd</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommonPadding">
        <item name="android:paddingStart">@dimen/DefaultPaddingStart</item>
        <item name="android:paddingEnd">@dimen/DefaultPaddingEnd</item>
    </style>

</resources>
